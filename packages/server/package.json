{
  "name": "@mentoring/backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:from-convex": "ts-node src/scripts/migrate-from-convex.ts",
    "migrate:files": "ts-node src/scripts/migrate-files.ts",
    "migrate:files:update-db": "ts-node src/scripts/migrate-files.ts --update-db",
    "export:convex": "ts-node src/scripts/export-convex-data.ts",
    "export:convex:sample": "ts-node src/scripts/export-convex-data.ts --sample"
  },
  "dependencies": {
    "@apollo/server": "4.9.3",
    "@clerk/clerk-sdk-node": "^4.2.9",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "15.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.14.2",
    "multer": "^1.4.5-lts.1",
    "posthog-node": "^5.17.2",
    "reflect-metadata": "^0.1.14",
    "sqlite3": "^5.1.7",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.28",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/__tests__/**"
    ]
  }
}
